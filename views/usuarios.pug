extends ./layouts/index 

block contenido
    h1= pagina
    main.container.mt-5 
        .row 
            .col-md-2 
                // Bot√≥n para abrir la ventana modal
                button.btn.btn-outline-success(type='button' data-bs-toggle='modal' data-bs-target='#modalForm')
                    svg.icon.icon-tabler.icon-tabler-circle-plus(xmlns='http://www.w3.org/2000/svg' width='80' height='40' viewbox='0 0 24 24' stroke-width='1.5' stroke='#00b341' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        path(d='M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0')
                        path(d='M9 12h6')
                        path(d='M12 9v6')

                // Ventana Modal
                #modalForm.modal
                    .modal-dialog
                        .modal-content
                            // Encabezado de la ventana modal
                            .modal-header
                                h4.modal-title Agregar Usuario
                                button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                            // Contenido del formulario
                            .modal-body
                                form(method='POST', action='')
                                    .form-group.mt-4
                                        label(for='nombre') Nombre:
                                        input#nombre.form-control(type='text')
                                    .form-group.mt-4
                                        label(for='email') Email:
                                        input#email.form-control(type='email')
                                    .form-group.mt-4
                                        label(for='password') Password:
                                        input#password.form-control(type='password')

                                    input.btn.btn-outline-primary.mt-4(type='submit' value='Crear') 

            .col-md-10
                table.table.table-striped
                    thead
                        tr
                            th ID
                            th Nombre
                            th Email
                            th Acciones
                    tbody
                        //- p= JSON.stringify(usuarios)
                        each usuario in usuarios 
                            tr
                                td= usuario.id
                                td= usuario.nombre
                                td= usuario.email
                                td
                                    a.mx-4(href=`/usuarios/${usuario.id}`) 
                                        svg.icon.icon-tabler.icon-tabler-edit(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' stroke-width='1.5' stroke='#00abfb' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                            path(d='M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1')
                                            path(d='M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z')
                                            path(d='M16 5l3 3')

                                    a.mx-4(href=`/usuarios/${usuario.id}`) 
                                        svg.icon.icon-tabler.icon-tabler-square-rounded-x(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' stroke-width='1.5' stroke='#ff2825' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                            path(d='M10 10l4 4m0 -4l-4 4')
                                            path(d='M12 3c7.2 0 9 1.8 9 9s-1.8 9 -9 9s-9 -1.8 -9 -9s1.8 -9 9 -9z')
